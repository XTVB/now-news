{
  "rulesDirectory": ["node_modules/codelyzer"],
  "extends": [
    "tslint-microsoft-contrib",
    "tslint-eslint-rules",
    "tslint:latest",
    "angular-tslint-rules",
    "rxjs-tslint-rules"
  ],
  "rules": {
    "array-type": [true, "array"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "await-promise": true,
    "comment-format": [true, "check-space"],
    "curly": true,
    "cyclomatic-complexity": [true, 10],
    "import-blacklist": [true, "rxjs/Rx", "@angular/material"],
    "indent": [true, "spaces", 2],
    "interface-name": [true, "never-prefix"],
    "linebreak-style": [true, "LF"],
    "max-classes-per-file": false,
    "max-file-line-count": [true, 300],
    "max-line-length": [false],
    "member-access": [true, "check-accessor", "check-parameter-property"],
    "member-ordering": [false],
    "newline-per-chained-call": false,
    "no-any": true,
    "no-boolean-literal-compare": true,
    "no-default-export": true,
    "no-dynamic-delete": true,
    "no-empty": [true, "allow-empty-catch"],
    "no-for-in-array": true,
    "no-implicit-dependencies": false,
    "no-import-side-effect": true,
    "no-inferrable-types": [true, "ignore-params"],
    "no-invalid-this": true,
    "no-magic-numbers": true,
    "no-null-keyword": true,
    "no-require-imports": true,
    "no-shadowed-variable": true,
    "no-submodule-imports": [
      true,
      "@angular/cdk",
      "@angular/common/http",
      "@angular/core/testing",
      "@angular/http/testing",
      "@angular/material",
      "@angular/platform-browser",
      "@angular/router/src/config",
      "@ngrx/effects/testing",
      "angulartics2",
      "app",
      "environments/environment",
      "rxjs"
    ],
    "no-switch-case-fall-through": true,
    "no-unnecessary-class": false,
    "no-unnecessary-qualifier": true,
    "object-literal-sort-keys": false,
    "ordered-imports": true,
    "only-arrow-functions": [true, "allow-declarations"],
    "prefer-conditional-expression": false,
    "prefer-method-signature": true,
    "prefer-readonly": true,
    "promise-function-async": false,
    "quotemark": [false],
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "typedef": false,
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
    "template-banana-in-box": true,
    "contextual-lifecycle": true,
    "contextual-decorator": true,
    "component-class-suffix": true,
    "component-selector": [true, "element", "now", "kebab-case"],
    "directive-class-suffix": true,
    "directive-selector": [true, "attribute", "now", "camelCase"],
    "use-component-selector": true,
    "import-destructuring-spacing": true,
    "import-name": false,
    "no-attribute-decorator": true,
    "no-conflicting-lifecycle": true,
    "no-forward-ref": false,
    "no-input-rename": true,
    "no-lifecycle-call": true,
    "no-output-on-prefix": false,
    "no-output-rename": true,
    "no-unused-css": false,
    "no-pipe-impure": true,
    "pipe-naming": ["camelCase"],
    "prefer-output-readonly": true,
    "template-conditional-complexity": [true, 2],
    "template-cyclomatic-complexity": [true, 24],
    "use-lifecycle-interface": true,
    "no-host-metadata-property": true,
    "no-inputs-metadata-property": true,
    "no-outputs-metadata-property": true,
    "use-pipe-decorator": true,
    "use-pipe-transform-interface": true,
    "missing-jsdoc": false,
    "no-relative-imports": false,
    "prefer-type-cast": false,
    "export-name": false,
    "no-reserved-keywords": false,
    "completed-docs": false,
    "no-stateless-class": false,
    "strict-boolean-expressions": false,
    "no-backbone-get-set-outside-model": false,
    "mocha-no-side-effect-code": false,
    "switch-default": false,
    "no-increment-decrement": false,
    "no-void-expression": [true, "ignore-arrow-function-shorthand"],
    "no-unsafe-any": false,
    "insecure-random": false,
    "prefer-inline-decorator": false,
    "template-no-negated-async": false,
    "template-no-call-expression": false,
    "template-use-track-by-function": false,
    "template-i18n": false,
    "no-output-native": false,
    "unnecessary-else": false,
    "unnecessary-constructor": false,
    "rxjs-no-unsafe-takeuntil": true,
    "no-null-undefined-union": false,
    "space-before-function-paren": false
  }
}
